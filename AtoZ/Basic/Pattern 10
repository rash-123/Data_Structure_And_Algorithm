https://takeuforward.org/plus/dsa/beginner-problem/patterns/pattern-10

class Solution {
private:
//TC - O(N2)
//SC - O(1)
void pattern2(int n) {
        for(int i = 1; i <= n; i++){
            for(int j = 1; j <= i; j++){
                cout << "*";
            }
            cout << endl;
        }
    }

 void pattern5(int n) {
        for(int i = 1; i < n; i++){
            for(int j = n; j > i; j--){
                cout << "*";
            }
            cout << endl;
        }
    }
public:
    void pattern10(int n) {
        pattern2(n);
        pattern5(n);
    }
};
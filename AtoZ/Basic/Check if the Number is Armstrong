https://takeuforward.org/plus/dsa/problems/check-if-the-number-if-armstrong

class Solution {
public:
//TC - O(logN)
//SC - O(1)
    int countDigit(int n){
        int count = log10(n) + 1;
        return count;
    }
    bool isArmstrong(int n) {
        int originalNo = n;
        int sum = 0;
        int count = countDigit(n);
        while(n > 0){
            int lastDigit = n % 10;
            sum += pow(lastDigit, count);
            n = n / 10;
        }
        if(originalNo == sum){
            return true;
        }
        return false;
    }
};
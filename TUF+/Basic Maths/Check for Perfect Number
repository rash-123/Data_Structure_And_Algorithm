https://takeuforward.org/plus/dsa/beginner-problem/basic-maths/check-for-perfect-number

class Solution {
public:
//TC - O(N)
//SC - O(1)
    bool isPerfect(int n) {
        int sum = 0;
        for(int i = 1; i < n; i++){
            if(n % i == 0){
                sum += i;
            }
        }
        if(sum == n){
            return true;
        }
        return false;
    }
};
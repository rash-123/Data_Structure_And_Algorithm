https : // takeuforward.org/plus/dsa/beginner-problem/basic-recursion/check-if-the-array-is-sorted-ii

        class Solution
{
public:
    // TC - O(N)
    // SC - O(N)
    bool isSorted(vector<int> &nums)
    {
        if (nums.size() <= 1)
        {
            return true;
        }
        return sorted(nums, 0, 1);
    }

    bool sorted(vector<int> &nums, int left, int right)
    {
        if (right >= nums.size())
        {
            return true;
        }

        if (nums[left] > nums[right])
        {
            return false;
        }

        return sorted(nums, left + 1, right + 1);
    }
};
https://takeuforward.org/plus/dsa/beginner-problem/basic-arrays/check-if-the-array-is-sorted-i

class Solution {
public:
//TC - O(N)
//SC - O(1)
    bool arraySortedOrNot(int arr[], int n) {
        for(int i = 1; i < n; i++){
            if(arr[i] < arr[i-1]){
              return false;
            }
          }
          return true;
    }
};
https://takeuforward.org/plus/dsa/beginner-problem/patterns/pattern-17

class Solution {
public:
//TC - O(N2)
//SC - O(1)
    void pattern17(int n) {
        for(int i = 1; i <= n; i++){
            char ch = 'A';
            for(int j = n; j > i; j--){
                cout << " ";
            }

            for(int j = 1; j <= i; j++){
                cout << ch;
                ch++;
            }

            ch--;
            for(int j = i; j > 1; j--){
                ch--;
                cout << ch;
            }
            cout << endl;

        }
    }
};